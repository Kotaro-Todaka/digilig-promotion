    header.l-header
      div.l-header__inner
        h1.l-header__logo
          a(href="#") 
            img(src="./asset/images/header/site-logo.svg", alt="Digital Hollywood Studio × Lig", width="190px", height="auto")
        nav#global-navigation.l-global-navigation
          ul.l-global-navigation__list
            li.l-global-navigation__item
              a(href="#").l-global-navigation__link
                span.l-global-navigation__text--en  About Us
                span.l-global-navigation__text--ja  デジLigについて
            li.l-global-navigation__item
